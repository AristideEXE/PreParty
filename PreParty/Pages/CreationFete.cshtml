@page
@model PreParty.Pages.CreationFeteModel
@{
}

<div class="text-center">
    <h1 class="display-4">Créez votre fête !</h1>
    <p>Renseignez les informations nécessaires et invitez vos amis</p>
</div>

<div class="container-fluid">
    <form method="post" name="CreationFeteForm">
    <div class="row">
        <!--Formulaire des informations principales de la fête : -->
        <div class="col-md-6">
                <div class="p-4 shadow rounded">
                    <div class="form-group">
                        <label for="inputNom">Nom de la fête :</label>
                        <input type="text" class="form-control" name="_nom_fete" id="inputNom" placeholder="Entrez un nom" required>
                    </div>

                    <div class="row">
                        <div class="col-md">
                            <div class="form-group">
                                <label for="inputAdresse">Ajouter une adresse</label>
                                <input type="text" class="form-control" id="inputAdresse" name="_adresse" placeholder="Adresse" required>
                            </div>
                        </div>

                        <div class="col-md">
                            <div class="form-group">
                                <label for="inputGPS">Coordonnées GPS :</label>
                                <input type="text" class="form-control" id="inputGPS" placeholder="Coordonnées GPS" name="_gps">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md">
                            <div class="form-group">
                                <label for="inputDateDebut">Date Début</label>
                                <input type="datetime-local" min="@Model.DateAjd" class="form-control" id="inputDateDebut" required name="_dateDebut">
                            </div>
                        </div>

                        <div class="col-md">
                            <div class="form-group">
                                <label for="inputDateFin">Date de fin</label>
                                <input type="datetime-local" class="form-control" min="@Model.DateAjd" id="inputDateFin" required name="_dateFin">
                            </div>
                        </div>
                 

                    </div>

                    <div class="form-group">
                        <label for="inputDescritpion">Ajouter une descritpion : </label>
                        <input type="text" class="form-control" id="inputDescritpion" placeholder="Entrez une description" name="_description">
                    </div>

                    <div class="form-group">
                        <label for="inputPrix">Prix d'entrée: </label>
                        <input type="number" class="form-control" id="inputPrix" aria-describedby="numberHelp" placeholder="Entrez un prix" min="0" required name="_prix">
                        <small id="numberHelp" class="form-text text-muted">Prix en €.</small>
                    </div>

                    <br />

                </div>
                
        </div>

        <!--Ajouter les invités -->
        <div class="col-md-6">
            <div class="p-4 shadow rounded">
                    <h2>
                        Invités
                        <a href="#">
                            <span class="material-symbols-outlined bg-success text-white rounded-circle" >add</span>
                        </a>
                    </h2>

                    <!-- Button trigger popup -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ajoutInvite">
                        Ajouter un invité
                    </button>

                    <!-- Popup -->
                    <div class="modal fade" id="ajoutInvite" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Ajouter un invité</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form method="post">
                                        <input type="search" placeholder="email@exemple.fr" class="form-control" name="email" id="email"/>
                                        <input type="submit" class="btn btn-primary" value="Chercher"/>
                                    </form>      

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                </div>
                            </div>
                        </div>
                    </div>




                    <div style="overflow : scroll; overflow-x: hidden; max-height: 300px">
                        @for (int i = 0; i < 20; i++)
                        {
                            <div class="row bg-light rounded my-1 p-2 invite">
                                <div class="col">PFP</div>
                                <div class="col">Simon Robinet</div>
                                <div class="col"><a href="#" class="btn btn-primary">Supprimer</a></div>
                            </div>
                        }
                    </div>
            </div>
        </div>
        
    </div>
    <br />
    <div class="row justify-content-center">
        <div class="col-md-1">
            <div class="form-group">
                 <button type="submit"><span>Valider</span></button>
            </div>
        </div>
    </div>
    </form>
</div>

