@page
@model PreParty.Pages.InscriptionModel
@{
}

<div class="text-center">
    <h1 class="display-4">Inscription</h1>
    <p>Créez votre compte !</p>
</div>

<div class="container">

    <div class="p-4 shadow rounded">

        <div class="row justify-content-start">
            <div class="col-md-5">
                <h2 class="formTitre">Formulaire d'inscription :</h2>
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            <div class="col-md-10">
                <form>

                    <div class="form-group row">
                        <label for="inputNom" class="col-md-3 col-form-label"><span class="rouge">*</span>Nom :</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="inputNom" placeholder="Entrez votre nom" required name="_nom">
                        </div>
                    </div>

                    <br />

                    <div class="form-group row">
                        <label for="inputPrenom" class="col-md-3 col-form-label"><span class="rouge">*</span>Prénom :</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" id="inputPrenom" placeholder="Entrez votre Prénom" required name="_prenom">
                        </div>
                    </div>

                    <br />

                    <div class="form-group row">
                        <label for="inputDateNaissance" class="col-md-3 col-form-label"><span class="rouge">*</span>Date de naissance :</label>
                        <div class="col-md-8">
                            <input type="date" class="form-control" id="inputDateNaissance" required max="@Model.DateAjd" name="_date_naissance">
                        </div>
                    </div>

                    <br />

                    <div class="form-group row">
                        <label for="inputMail" class="col-md-3 col-form-label"><span class="rouge">*</span>Adresse mail :</label>
                        <div class="col-md-8">
                            <input type="email" class="form-control" id="inputMail" placeholder="Entrez votre adresse mail" required name="_email">
                        </div>
                    </div>

                    <br />

                    <div class="form-group row">
                        <label for="inputMdp" class="col-md-3 col-form-label"><span class="rouge">*</span>Mot de passe :</label>
                        <div class="col-md-8">
                            <input type="password" class="form-control" id="inputMdp" placeholder="Mot de passe" required name="_password">
                        </div>
                    </div>

                    <br />

                    <div class="form-group row">
                        <label for="inputMdpConfirm" class="col-md-3 col-form-label"><span class="rouge">*</span>Confirmation du mot de passe :</label>
                        <div class="col-md-8">
                            <input type="password" class="form-control" id="inputMdpConfirm" placeholder="Confirmez votre mot de passe" required>
                        </div>
                    </div>

                    <br />
                    <div class="row justify-content-center">
                        <div class="col-md-1">
                            <div class="form-group">
                                <button type="submit"><span>Valider</span></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <br />
        <div class="row justify-content-center">
            <div class="col-md">
                <p class="champsObligatoires">
                    * Champs obligatoires :
                </p>
            </div>
        </div>

    </div>


</div>