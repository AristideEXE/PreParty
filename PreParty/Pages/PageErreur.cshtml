@page
@model PreParty.Pages.PageErreurModel
@{
}
<div class="text-center">
    <h1 class="display-4 rouge">Erreur</h1>
    <p>Nous avons rencontré une erreur :</p>
</div>

<div class="container">

    <div class="p-4 shadow rounded">

        <div class="row justify-content-start">
            <div class="col-md-10">
                <p class="rouge">@Model.Message</p>
            </div>
        </div>
    </div>
    <br />
    <div class="row justify-content-center">
            <div class="col-md-10">
                <form method="post">
                    <input type="hidden" value="@Model.PageDest" name="_pageDest"/>
                <div class="row justify-content-start">
                    <div class="col-md-1">
                        <div class="form-group">
                            <button type="submit" class="btnStyleViolet"><span>Continuer</span></button>
                        </div>
                    </div>
                </div>
                </form>
            </div>
    </div>
</div>
